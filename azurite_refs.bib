file = {:Users/ellenpurdy/Desktop/Azurite readings/Clarke{\_}Imaging-spectroscopies-to-characterize-a-13th-century-Japanese-handscroll-The-Miraculous-Interventions-of-Jiz-Bosatsu2021Heritage-ScienceOpen-Access.pdf:pdf},
issn = {20507445},
journal = {Heritage Science},
keywords = {Conservation,FORS,Handscroll,Imaging,Japanese,Pigment,XRF},
number = {1},
pages = {1--10},
publisher = {Springer International Publishing},
title = {{Imaging spectroscopies to characterize a 13th century Japanese handscroll, The Miraculous Interventions of Jizō Bosatsu}},
