issn = {09478396},
journal = {Applied Physics A: Materials Science and Processing},
number = {1},
pages = {69--74},
title = {{New markers to identify the provenance of lapis lazuli: Trace elements in pyrite by means of micro-PIXE}},
volume = {111},
