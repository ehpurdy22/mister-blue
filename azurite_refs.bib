issn = {14358115},
journal = {Microscopy and Microanalysis},
keywords = {electron microscopy,electron tomography,in situ microtome,zinc soaps},
number = {3},
pages = {318--322},
pmid = {29860951},
title = {{Electron Microscopy Imaging of Zinc Soaps Nucleation in Oil Paint}},
volume = {24},
year = {2018}
}
