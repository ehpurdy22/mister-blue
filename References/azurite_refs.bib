issn = {18733743},
journal = {Dyes and Pigments},
keywords = {Azurite pigments,Glue binder,Paint dosimeters,Particle size,Photo-aging tests},
pages = {53--65},
title = {{Pigment-size effect on the physico-chemical behavior of azurite-tempera dosimeters upon natural and accelerated photo aging}},
volume = {141},
year = {2017}
