issn = {20507445},
journal = {Heritage Science},
keywords = {Colourless powdered glass,Driers,Fifteenth century,Green mineral copper sulphate,Netherlandish painting,Pigments,Purple fluorite,Sixteenth century,Smalt,Vivianite,Zinc sulphate},
pages = {1--20},
publisher = {Springer International Publishing},
title = {{New insights into the materials of fifteenth- and sixteenth-century Netherlandish paintings in the National Gallery, London}},
volume = {5},
